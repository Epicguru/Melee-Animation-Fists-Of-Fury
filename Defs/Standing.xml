<Defs>

  <!-- Bases -->
  <AM.AnimDef Name="AnimIdleFOF" Abstract="True">
    <type>Idle</type>
    <pawnCount>1</pawnCount>
    <idleType>Idle</idleType>
    <handsVisibility>
      <li>
        <pawnIndex>0</pawnIndex>
        <showMainHand>true</showMainHand>
        <showAltHand>true</showAltHand>
      </li>
    </handsVisibility>
    <weaponFilter Class="AM.Reqs.False"/>
  </AM.AnimDef>

  <!-- Fighting animations (idle for fistfights) -->
  <AM.AnimDef ParentName="AnimIdleFOF">
    <defName>AM_FOF_Idle_FightingHor</defName>
    <data>FOF_FightingHorizontal.json</data>
    <pointAtTarget>true</pointAtTarget>
    <idleType>IdleSpecial</idleType>
  </AM.AnimDef>

  <AM.AnimDef ParentName="AnimIdleFOF">
    <defName>AM_FOF_Idle_FightingSouth</defName>
    <data>FOF_FightingSouth.json</data>
    <pointAtTarget>true</pointAtTarget>
    <idleType>IdleSpecial</idleType>
    <pointAtTargetAngleOffset>-90</pointAtTargetAngleOffset>
  </AM.AnimDef>

  <!-- Neutral (south) idle. -->
  <AM.AnimDef ParentName="AnimIdleFOF">
    <defName>AM_FOF_Idle_NeutralIdle</defName>
    <data>FOF_Idle.json</data>
  </AM.AnimDef>

</Defs>